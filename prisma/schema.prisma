// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Report {
  id Int @id @default(autoincrement())
  date DateTime
  cost String
  brand String
  amount Int
  userId Int
  user User @relation("Reports", fields: [userId], references: [id])
  petId Int
  pet Pet @relation("Reports", fields: [petId], references: [id])
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("reports")
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  password String
  reports Report[] @relation("Reports")
  pets Pet[] @relation("Pets")
  created_at DateTime @default(now())

  @@map("users")
}

model Pet {
  id Int @id @default(autoincrement())
  name String
  type String
  breed String
  userId Int
  user User @relation("Pets", fields: [userId], references: [id])
  reports Report[] @relation("Reports")

  @@map("pets")
}